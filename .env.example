# OpenAI API Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.2

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/rxmatch
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (GCP Memorystore)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_CACHE=604800
REDIS_TTL_RXCUI=2592000

# External APIs (Public - No Keys Required)
RXNORM_API_BASE=https://rxnav.nlm.nih.gov/REST
FDA_NDC_API_BASE=https://api.fda.gov/drug/ndc.json

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# GCP Configuration (Cloud Run Deployment)
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_SERVICE_NAME=rxmatch-api

# Feature Flags
FEATURE_CACHE_ENABLED=true
FEATURE_RATE_LIMITING=true
FEATURE_ANALYTICS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Session Configuration
SESSION_SECRET=change-this-to-a-random-string-in-production
SESSION_MAX_AGE=86400000

# Security Configuration
# CORS: Comma-separated list of allowed origins (production only)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Content Security Policy: Additional CSP directives (optional)
CSP_REPORT_URI=

# Security Headers: Enable/disable security features
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

